pcm.card0 {
type hw
card 0
}

pcm.!default {
type plug
slave.pcm "dmixer"

}


pcm.dmixer {
type dmix
ipc_key 1025
slave {
pcm "hw:0,0"
period_time 0
period_size 2048        #1024
buffer_size 32768        #4096
                        #periods 128
rate 48000                #44100
}
bindings {
0 0
1 1
}
}
